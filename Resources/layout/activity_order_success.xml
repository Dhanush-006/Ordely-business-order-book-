<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Animated Success Icon (you can later replace with Lottie) -->
    <ImageView
        android:id="@+id/imgSuccess"
        android:src="@drawable/ic_check_circle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Success Icon"
        app:tint="#4CAF50" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/txtSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Placed Successfully!"
        android:textColor="#222222"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Order Details -->
    <TextView
        android:id="@+id/txtOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp" />

    <!-- Go Home Button -->
    <Button
        android:id="@+id/btnGoHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:layout_gravity="center" />
</LinearLayout>
